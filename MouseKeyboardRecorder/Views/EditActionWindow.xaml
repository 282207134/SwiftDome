<Window x:Class="MouseKeyboardRecorder.Views.EditActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="✏️ 编辑操作" 
        Height="450" Width="500"
        MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="编辑操作详情" FontSize="16" FontWeight="Bold" Margin="0,0,0,16"/>

        <!-- 操作类型 -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="操作类型:" VerticalAlignment="Center" FontSize="12"/>
            <ComboBox Grid.Column="1" x:Name="CmbActionType" FontSize="12" Padding="6,4" SelectionChanged="CmbActionType_SelectionChanged">
                <ComboBoxItem Tag="MouseMove">🖱️ 鼠标移动</ComboBoxItem>
                <ComboBoxItem Tag="MouseLeftDown">🖱️ 左键按下</ComboBoxItem>
                <ComboBoxItem Tag="MouseLeftUp">🖱️ 左键释放</ComboBoxItem>
                <ComboBoxItem Tag="MouseRightDown">🖱️ 右键按下</ComboBoxItem>
                <ComboBoxItem Tag="MouseRightUp">🖱️ 右键释放</ComboBoxItem>
                <ComboBoxItem Tag="MouseMiddleDown">🖱️ 中键按下</ComboBoxItem>
                <ComboBoxItem Tag="MouseMiddleUp">🖱️ 中键释放</ComboBoxItem>
                <ComboBoxItem Tag="MouseWheel">🖱️ 滚轮滚动</ComboBoxItem>
                <ComboBoxItem Tag="KeyDown">⌨️ 按键按下</ComboBoxItem>
                <ComboBoxItem Tag="KeyUp">⌨️ 按键释放</ComboBoxItem>
                <ComboBoxItem Tag="KeyPress">⌨️ 按键输入</ComboBoxItem>
                <ComboBoxItem Tag="Wait">⏱️ 等待延迟</ComboBoxItem>
            </ComboBox>
        </Grid>

        <!-- 坐标设置（鼠标操作） -->
        <GroupBox Grid.Row="2" x:Name="GroupCoordinates" Header="坐标设置" Margin="0,0,0,12" FontSize="12">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="X 坐标:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" x:Name="TxtX" FontSize="12" Padding="4" PreviewTextInput="NumberValidationTextBox"/>

                <TextBlock Grid.Column="2" Text="Y 坐标:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <TextBox Grid.Column="3" x:Name="TxtY" FontSize="12" Padding="4" PreviewTextInput="NumberValidationTextBox"/>

                <Button Grid.Column="4" x:Name="BtnPickPosition" Content="📍 获取当前位置" Margin="16,0,0,0" 
                        Padding="8,4" Click="BtnPickPosition_Click"/>
            </Grid>
        </GroupBox>

        <!-- 滚轮设置 -->
        <GroupBox Grid.Row="3" x:Name="GroupWheel" Header="滚轮设置" Margin="0,0,0,12" FontSize="12" Visibility="Collapsed">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="滚动量:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Slider x:Name="SliderWheel" Minimum="-120" Maximum="120" Value="0" 
                            Width="200" TickFrequency="120" TickPlacement="BottomRight"/>
                    <TextBlock x:Name="LblWheelValue" Text="0" Width="50" TextAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 键盘设置 -->
        <GroupBox Grid.Row="4" x:Name="GroupKeyboard" Header="键盘设置" Margin="0,0,0,12" FontSize="12" Visibility="Collapsed">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="虚拟键码:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="TxtVirtualKey" FontSize="12" Padding="4" PreviewTextInput="NumberValidationTextBox"/>

                    <TextBlock Grid.Column="2" Text="扫描码:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                    <TextBox Grid.Column="3" x:Name="TxtScanCode" FontSize="12" Padding="4" PreviewTextInput="NumberValidationTextBox"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="字符:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Grid.Column="1" x:Name="TxtCharacter" FontSize="12" Padding="4"/>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- 延迟设置 -->
        <GroupBox Grid.Row="5" x:Name="GroupDelay" Header="延迟设置" Margin="0,0,0,12" FontSize="12">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="延迟时间 (ms):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox Grid.Column="1" x:Name="TxtDelay" FontSize="12" Padding="4" PreviewTextInput="NumberValidationTextBox"/>
                <TextBlock Grid.Column="2" Text="毫秒" VerticalAlignment="Center" Margin="8,0,0,0" Foreground="#666666"/>
            </Grid>
        </GroupBox>

        <!-- 按钮 -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="BtnOk" Content="✅ 确定" Width="80" Height="32" Margin="0,0,8,0" 
                    Background="#007ACC" Foreground="White" BorderThickness="0" Click="BtnOk_Click"/>
            <Button x:Name="BtnCancel" Content="❌ 取消" Width="80" Height="32" 
                    Background="#F0F0F0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
